<h1>My feeling diary</h1>

<%= link_to "New note", new_feeling_entry_path %>
<%= button_to "Force Sync", sync_feeling_entries_path, method: :post, form: { data: { turbo: false } }, class: "sync-button" %>
<%= link_to "Back", root_path %>


<ul>
  <% @entries.each do |entry| %>
    <li>
      <strong><%= entry[:mood] %></strong>
      â€” <%= entry[:note] %>
      <% if entry[:created_at].present? %>
        <em><%= entry[:created_at].strftime("%d.%m.%Y %H:%M") %></em>
      <% else %>
        <em>(No time described)</em>
      <% end %>
    </li>
  <% end %>
</ul>
