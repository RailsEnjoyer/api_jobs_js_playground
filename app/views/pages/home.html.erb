<% if user_signed_in? %>
  <div>Hello, <%= current_user.email %></div>
  <%= image_tag(current_user.avatar_url, style:"width: 100px") %>
  <%= link_to "Diary", feeling_entries_path %>
  <%= link_to "Edit Account", edit_user_registration_path %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" } %>
<% else %>
  <div>Hello, Guest</div>
  <%= link_to "Login", new_user_session_path %>
  <%= link_to "Create Account", new_user_registration_path %>
<% end %>
